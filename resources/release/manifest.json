{
  "name": "notify me",
  "version": "0.1.0",
  "browser_action": {
    "default_title": "Show the popup",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "images/notification.png",
      "38": "images/notification.png"
    }
  },
  "icons": {
    "16": "images/notification.png",
    "48": "images/notification.png",
    "128": "images/notification.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "compiled/content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "permissions": [
      "storage",
      "notifications"
  ],
  "manifest_version": 2
}
